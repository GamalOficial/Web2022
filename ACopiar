import React, { Component } from "react";

class Personagem extends Component {
    render() {
        const { nome, casa, horario } = this.props
        return (
            <div>
                <h2>Personagem {nome} da casa {casa} no hor√°rio {horario}</h2>
            </div>
        )
    }
}

